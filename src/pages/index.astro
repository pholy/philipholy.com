---
import BaseHead from '../components/BaseHead.astro';
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import { SITE_DESCRIPTION, SITE_TITLE } from '../consts';
import philipImage from '../assets/philip.jpeg';
import Image from 'astro/components/Image.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<div class="hero-section">
				<div class="hero-content">
					<h1>Hi, I'm Philip</h1>
					<p>
		                I'm a developer, specializing in backend web development (mostly PHP).
					</p>
		            <p>
		                When I'm not writing code, you'll probably find me playing with my kids or learning how to DIY some work on my house or minivan.
		            </p>
		            <p>
		                I'm based in Greenville, SC. ðŸŒ™ðŸŒ´
		            </p>
				</div>
				<div class="hero-image">
					<Image src={philipImage} alt="Philip" class="profile-image" />
				</div>
			</div>
		</main>
		<Footer />
	</body>
</html>

<style>
	.hero-section {
		display: flex;
		align-items: flex-start;
		gap: 3rem;
		margin-bottom: 2rem;
        padding: 1em 0.5em;
	}
	
	.hero-content {
		flex: 1;
	}
	
	.hero-image {
		flex-shrink: 0;
	}
	
	.profile-image {
		max-width: 300px;
		width: 100%;
		height: auto;
		border-radius: 8px;
	}
	
	/* Tablet styles */
	@media (max-width: 768px) {
		.hero-section {
			flex-direction: column;
			gap: 2rem;
			text-align: center;
		}
		
		.hero-image {
			align-self: center;
		}
		
		.profile-image {
			max-width: 250px;
		}
		
		h1 {
			font-size: 2.5em;
		}
	}
	
	/* Mobile styles */
	@media (max-width: 480px) {
		.hero-section {
			gap: 1.5rem;
		}
		
		.profile-image {
			max-width: 200px;
		}
		
		h1 {
			font-size: 2em;
		}
		
		p {
			font-size: 16px;
		}
	}
</style>
